@import "./styles/normalize"
@import "./styles/zeroing"
@require "./styles/colors"
@require "./styles/variables"

body
  color $color-default
  line-height 1.6
  font-size $content-box-font-size
  font-variant-ligatures: common-ligatures;
  font-family 'LMRoman', "Bookman", Georgia, "Times New Roman", serif
  background-image url("data:image/svg+xml;base64,")

h1, h2, h3, h4, h5, h5
  line-height 120%
  font-family 'Raleway', Arial, Helvetica, Sans-serif
  font-variant-ligatures: none;
  font-weight 400

h1
  font-size 220%
  margin-bottom 6vh
  margin-top 4vh
h2
  font-size 190%
  margin-bottom 4vh
  margin-top 3.5vh
h3
  font-size 160%
  margin-bottom 3vh
  margin-top 2.6vh
h4
  font-size 130%
h5
  font-size 100%
h6
  font-size 80%

a
  cursor pointer
  text-decoration none
  color $color-link

a:hover
  text-decoration none
  color: $color-link-hover

.content
  content-box()
  ul
    list-style-type none
    position relative

  li:before
    content "\2022"
    float left
    font-size 90%
    line-height 170%
    margin-right 1vw

pre
  font-size 75%
  font-variant-ligatures: none;
  margin-bottom 2.3vh
  margin-top 2.3vh
  overflow scroll
  color $color-code
  .keyword
    font-weight bold
    color $color-deepBlue-text
  .string
    font-weight bold
    color $color-green-text
  .number
    color $color-blue-text
  .arrow
    color $color-magenta-text

p
  margin-bottom 3vh

p code
  font-variant-ligatures: none;
  color $color-code
  margin-left 3px
  margin-right 5px
  font-size 90%


.aboutBlock
  wrapper-padding()