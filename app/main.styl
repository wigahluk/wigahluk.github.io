@import "./styles/normalize"
@import "./styles/zeroing"
@require "./styles/colors"
@require "./styles/variables"

body
  color $color-default
  line-height 1.6
  font-size $content-box-font-size
  font-variant-ligatures: common-ligatures;
  font-family 'LMRoman', "Bookman", Georgia, "Times New Roman", serif
  background-image url("data:image/svg+xml;base64,")

h1, h2, h3, h4, h5, h5
  color: $color-header
  line-height 120%
  font-family 'Lato', Arial, Helvetica, Sans-serif
  font-weight 400
  a
    color $color-header-link
  a:hover
    color $color-header-link-hover

h1
  font-size 200%
  margin-bottom 4vh
  margin-top 3vh
  padding-bottom 1vh
  padding-top 1vh
  border-bottom 1px solid $color-header-border;
  border-top 1px solid $color-header-border;
  
h2
  font-size 160%
  margin-bottom 2vh
  margin-top 4vh
h3
  font-size 140%
  margin-bottom 1.5vh
  margin-top 3vh
h4
  font-size 120%
h5
  font-size 100%
h6
  font-size 80%

a
  cursor pointer
  text-decoration none
  color $color-link

a:hover
  text-decoration none
  color: $color-link-hover

.content
  content-box()
  ul
    list-style-type none
    position relative
    margin-bottom 1.5vw
  li
    li
      margin-left 2vw
    ul
      margin-bottom 0
    p
      margin 0
      margin-left 2vw
  li:before
    content: "\2022"
    float: left
    color: #808080
    font-size: 150%
    line-height: 79%
    margin-right: 0.1vw

pre
  font-size 75%
  font-variant-ligatures: none;
  margin-bottom 2.3vh
  margin-top 2.3vh
  overflow scroll
  color $color-code
  .keyword
    font-weight bold
    color $color-deepBlue-text
  .string
    font-weight bold
    color $color-green-text
  .number
    color $color-blue-text
  .arrow
    color $color-magenta-text
  .literal
    color $color-cyan-text
  .comment
    color $color-code-light
    font-style italic

p
  margin-bottom 1.5vw

p code
  font-variant-ligatures: none;
  color $color-code
  margin-left 3px
  margin-right 5px
  font-size 90%


.aboutBlock
  wrapper-padding()